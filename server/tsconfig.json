{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./",
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "files": [
    "./params.json",
    "./package.json",
    "./server.ts",
  ],
  "include": [
    "./api/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}